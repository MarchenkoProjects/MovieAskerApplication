<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:padding="@dimen/navigation_header_padding"
    android:background="@drawable/navigation_header_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_avatar_image_view"
        android:layout_width="@dimen/navigation_header_profile_image_size"
        android:layout_height="@dimen/navigation_header_profile_image_size"
        android:src="@drawable/profile_image"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000" />

    <TextView
        android:id="@+id/profile_login_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="@string/navigation_header_login"
        android:textColor="@color/color_white"
        style="@style/MediumTextStyle" />

    <TextView
        android:id="@+id/profile_email_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_header_email"
        android:textColor="@color/color_white"
        style="@style/MediumBoldTextStyle" />

</LinearLayout>